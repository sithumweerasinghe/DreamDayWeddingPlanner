@model List<DreamDayWeddingPlanner.Models.Vendor>
@{
    ViewBag.Title = "Planner Dashboard";
}

<h2>Welcome, @ViewBag.Username</h2>

<p>
    <a href="@Url.Action("AddVendor", "Planner")" class="btn btn-success">Add New Vendor</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var vendor in Model)
    {
        <tr>
            <td>@vendor.Name</td>
            <td>@vendor.Category</td>
            <td>@vendor.Description</td>
            <td>@vendor.Price</td>
            <td>@vendor.Rating</td>
            <td>
                <a href="@Url.Action("EditVendor", "Planner", new { id = vendor.VendorId })" class="btn btn-primary btn-sm">Edit</a>
                <a href="@Url.Action("DeleteVendor", "Planner", new { id = vendor.VendorId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this vendor?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
