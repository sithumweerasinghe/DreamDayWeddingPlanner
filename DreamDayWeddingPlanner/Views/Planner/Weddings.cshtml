@model List<DreamDayWeddingPlanner.Models.Wedding>
@{
    ViewBag.Title = "Weddings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Weddings</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Location</th>
                <th>Couple</th>
                <th>Manage Vendors</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wedding in Model)
            {
                <tr>
                    <td>@wedding.Title</td>
                    <td>@wedding.WeddingDate.ToShortDateString()</td>
                    <td>@wedding.Location</td>
                    <td>@wedding.CoupleUsername</td>
                    <td>
                        <a href="@Url.Action("AssignVendors", "Planner", new { weddingId = wedding.WeddingId })" class="btn btn-primary">
                            Assign Vendors
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Dashboard", "Planner")" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
