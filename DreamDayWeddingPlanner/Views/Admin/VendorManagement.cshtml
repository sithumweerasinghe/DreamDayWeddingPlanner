@model List<DreamDayWeddingPlanner.Models.Vendor>

@{
    ViewBag.Title = "Vendor Management";
}

<h2>Vendor Management</h2>

<a href="@Url.Action("AddVendor", "Admin")" class="btn btn-primary mb-3">Add New Vendor</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Vendor Name</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Vendor in Model)
        {
            <tr>
                <td>@Vendor.Name</td>
                <td>@Vendor.Category</td>
                <td>@Vendor.Rating</td>
                <td>
                    @Html.ActionLink("Edit", "EditVendor", "Admin", new { id = Vendor.VendorId }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Delete", "DeleteVendor", "Admin", new { id = Vendor.VendorId },
                        new { onclick = "return confirm('Are you sure you want to delete this vendor?');", @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary mt-3">Back to Dashboard</a>