@model List<DreamDayWeddingPlanner.Models.User>

@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Welcome, @ViewBag.Username</h2>

<h3>All Planners</h3>

<table class="table table-bordered">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>

    @foreach (var planner in Model)
    {
        <tr>
            <td>@planner.Username</td>
            <td>@planner.Email</td>
            <td>
                <a href="@Url.Action("DeletePlanner", "Admin", new { id = planner.UserId })"
                   onclick="return confirm('Are you sure you want to delete this planner?');"
                   class="btn btn-danger btn-sm">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("AddPlanner", "Admin")" class="btn btn-primary">Add New Planner</a>
