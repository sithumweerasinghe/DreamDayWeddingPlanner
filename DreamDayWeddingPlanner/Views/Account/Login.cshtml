@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .auth-page {
        display: flex;
        height: 100vh;
        width:100%;
        background: #f5f5f5;
        overflow: hidden;  /* Prevents scrolling */
    }

    .body-content {
        margin-top: 0px!important; 
        padding: 0px !important;
    }
    .container {
        margin-right: 0px;
        margin-left: 0px;
        width:100%;
    }
        .auth-image {
        flex: 0 0 50%;  /* Take up 50% of the width */
        background: url('/Content/images/pexels-obviouslyarthur-1439260.jpg') no-repeat center center;
        background-size: cover;
        height: 100%;
    }

    .auth-form {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;  /* Added padding for better spacing */
    }

    .auth-card {
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 450px;
        min-width: 320px;  /* Ensure the form doesn’t shrink too much */
    }

    input {
        height: auto;
        width: 100%;
        max-width: 100% !important;
    }

    select {
        max-width: 100%;
    }

    .auth-card h2 {
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
    }

    .form-control {
        height: 45px;
        border-radius: 8px;
        padding: 0 12px;
        font-size: 16px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        font-weight: 500;
        background: #643700;
        border: none;
        transition: background 0.3s ease;
    }

    .btn-primary:hover {
        background: #864f00;
    }

    /* Responsive Design */

</style>

<div class="auth-page">
    <div class="auth-image"></div>
    <div class="auth-form">
        <div class="auth-card">
            <h2>Login</h2>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>

                <div class="form-group mb-4">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary">Login</button>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Message</div>
            }
        </div>
    </div>
</div>
