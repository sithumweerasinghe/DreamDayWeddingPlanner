@model DreamDayWeddingPlanner.Models.Wedding
@{
    ViewBag.Title = "Dashboard";
}

<h2>Welcome, @Session["Username"]!</h2>

@if (Model != null)
{
    <h3>Your Wedding Details:</h3>
    <ul>
        <li><strong>Title:</strong> @Model.Title</li>
        <li><strong>Date:</strong> @Model.WeddingDate.ToString("yyyy-MM-dd")</li>
        <li><strong>Location:</strong> @Model.Location</li>
    </ul>
}
else
{
    <p>No wedding found. <a href="@Url.Action("CreateWedding", "Couple")">Create one now</a>.</p>
}
