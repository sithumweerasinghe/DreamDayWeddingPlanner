@model DreamDayWeddingPlanner.Models.Wedding
@{
    ViewBag.Title = "Create Wedding";
}

<h2>Create Your Wedding</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Date</label>
        @Html.TextBoxFor(m => m.WeddingDate, new { @type = "date", @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Location</label>
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-success">Create</button>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
