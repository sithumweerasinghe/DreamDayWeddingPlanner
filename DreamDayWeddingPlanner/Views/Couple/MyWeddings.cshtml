@model List<DreamDayWeddingPlanner.Models.Wedding>

@{
    ViewBag.Title = "My Weddings";
}

<div class="container mt-5">
    <h2 class="text-center">My Wedding Plans</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">You have no weddings yet. <a href="@Url.Action("CreateWedding", "Couple")">Create one</a>.</div>
    }
    else
    {
        <table class="table table-hover mt-4">
            <thead class="thead-light">
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var wedding in Model)
                {
                    <tr>
                        <td>@wedding.Title</td>
                        <td>@wedding.WeddingDate.ToShortDateString()</td>
                        <td>@wedding.Location</td>
                        <td>
                            <a href="@Url.Action("Checklist", "Couple", new { weddingId = wedding.WeddingId })" class="btn btn-primary btn-sm">Checklist</a>
                            <a href="@Url.Action("Dashboard", "Couple", new { weddingId = wedding.WeddingId })" class="btn btn-secondary btn-sm ml-1">Dashboard</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("CreateWedding", "Couple")" class="btn btn-success">+ Create New Wedding</a>
    </div>
</div>
