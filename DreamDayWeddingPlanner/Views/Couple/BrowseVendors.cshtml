@model List<DreamDayWeddingPlanner.Models.Vendor>

@{
    ViewBag.Title = "Browse Vendors";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Explore Our Trusted Vendors</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No vendors found.</div>
    }
    else
    {
        <div class="row">
            @foreach (var vendor in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        @*<img src="@vendor.ImageUrl" class="card-img-top" alt="@vendor.Name">*@
                        <div class="card-body">
                            <h5 class="card-title">@vendor.Name</h5>
                            <p class="card-text"><strong>Category:</strong> @vendor.Category</p>
                            <p class="card-text">@vendor.Description</p>
                            <p class="card-text"><strong>Price:</strong> $@vendor.Price</p>
                            <p class="card-text"><strong>Rating:</strong> @vendor.Rating ⭐</p>
                            <a href="#" class="btn btn-outline-primary w-100">Contact Vendor</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <div class="text-center mt-4">
        <a href="@Url.Action("Dashboard", "Couple")" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>